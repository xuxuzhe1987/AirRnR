<h1>EDIT A BOOK</h1>

<%= form_for(@book) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :availability %>
  <%= f.check_box :availability %>
  <%= f.submit %>
<% end %>
