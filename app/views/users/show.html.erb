<div class="header">
    <h2> <%= @user.name %>'s profile Details!</h2>
</div>

<div class="right">
  <div class="card shadow p-3 mb-5 bg-body rounded">
  <br>
  <p>
    <strong>Name:</strong>
    <%= @user.name %>
  </p>
  <p>
    <strong>Address:</strong>
    <%= @user.address %>
  </p>
  <p>
    <strong>WeChat:</strong>
    <%= @user.we_chat %>
  </p>
  </div>
  <div class="image">
    <% if @user.avatar.attached? %>
      <%= cl_image_tag @user.avatar.key, alt: "user-picture" %>
    <% else %>
      <%= image_tag "user-show-page", alt: "user-picture" %>
    <% end %>
  </div>
</div>

<%= link_to 'Back to All Books', books_path, class: 'btn btn-outline-dark my-3' %>
